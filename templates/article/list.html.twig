{% extends "base.html.twig" %}

{% block title %}
	liste des journaux
{% endblock %}

{% block body %}

	<div class="container pt-5">
		<div class="row">
			<div class="col-12">
				<h1 class="text-center">Mes articles</h1>
			</div>

			{% include "shared/_messages_flash.html.twig" %}

			{% for article in articles %}
				<div class="card col-sm-12 col-md-6 col-lg-4 mt-3">
					<div>
						<h4>{{ article.titre }}</h4>
					</div>
					<div class="card-body">
						{{article.contenue}}
					</div>
					<div class="card-footer">

						<p>
							Paru le
							{{ article.createdAt | date('d-m-y')}}</p>
						<a class="btn btn-primary mt-3" href="{{ path('detail_article', {'id':article.id}) }}">Voir</a>

					</div>

				</div>

			{% endfor %}

		</div>


	</div>


{% endblock %}
