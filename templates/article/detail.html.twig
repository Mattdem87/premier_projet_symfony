{% extends "base.html.twig" %}

{% block title %}
Detail de l'article
{% endblock %}

{% block body %}

<div class="container pt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    {{ article.titre | upper}}
                </div>
                <div class="card-body">
                    {{ article.contenue }}
                </div>
                <div class="card-footer">
                    <p>Publi√© le : {{ article.createdAt | date('d-m-Y') }}</p>
                    <p>Auteur : {{ article.auteur.prenom }} {{ article.auteur.nomDeFamille }}</p>
                </div>
            </div>
            <a class="btn btn-danger mt-3" href="{{ path('supprimer_article', {'id':article.id }) }}">Supprimer l'article</a>
        </div>
    </div>
</div>






{% endblock %}