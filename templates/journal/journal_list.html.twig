{% extends "base.html.twig" %}

{% block title %}
	liste des journaux
{% endblock %}

{% block body %}

	<div class="container pt-5">
		<div class="row">
			<div class="col-12">
				<h1 class="text-center">Mes journaux</h1>
			</div>

			{% for journal in journaux %}
				<div class="card col-sm-12 col-md-6 col-lg-4 mt-3">
					<div>
						<h4>{{ journal.nom }}</h4>
					</div>
					<div class="card-body">
						{{ journal.prix | amount }}
					</div>

				</div>

			{% endfor %}

		</div>


	</div>


{% endblock %}
